    "typescript"
  ],
  "peerDependencies": {
    "typescript": ">= 2.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.11.3",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.1"
  },
  "files": [
    "dist/**",
    "*.d.ts",
    "*.js"
  ],
  "prettier": {
    "semi": false,
    "printWidth": 100
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "git add"
    ]
